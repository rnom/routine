= form_for @workout do |f|
  - if @workout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workout.errors.count, "error")} prohibited this workout from being saved:"
      %ul
        - @workout.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :menu
    = f.text_field :menu
  .field
    = f.label :weight
    = f.number_field :weight
  .field
    = f.label :set
    = f.number_field :set
  .field
    = f.label :bodypart
    = f.text_field :bodypart
  .field
    = f.label :cal
    = f.number_field :cal
  .actions
    = f.submit 'Save'
