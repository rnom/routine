!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Routine
    = include_gon
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.header
      .header__bar.row
        %h1.grid-6
          -# %a{:href => "/"} Routine
          = link_to root_path do
            =image_tag '/logo.jpg', class: 'logo', size: '150x48'
        - if user_signed_in?
          .user_nav.grid-6
            = link_to "My page", user_path(current_user)
            = link_to 'Calendar', calendar_meals_path
            = link_to 'Edit Account', edit_user_registration_path(current_user)
            = link_to "Log-out", destroy_user_session_path, method: :delete
        - else
          .grid-6
            = link_to "Log-in", new_user_session_path, class: 'post'
            = link_to "Sign-up", new_user_registration_path, class: 'post'
    = yield
