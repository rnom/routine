%p#notice= notice
%h1= @day
= pie_chart @chart, suffix: "", title: "Today's PFC Balance", colors: ["#008000", "#F00", "#000080"]
%table
  %thead
    %tr
      %th Name
      %th Protein
      %th Fat
      %th Carb
      %th Cal
      %th{:colspan => "3"}
  %tbody
    - @meals.each do |meal|
      %tr
        %td= meal.name
        %td= meal.protein
        %td= meal.fat
        %td= meal.carb
        %td= meal.cal
        %td= link_to 'Show', meal
        %td= link_to 'Edit', edit_meal_path(meal)
        %td= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' }
    %tr
      %th Total
      %th= @sum_protein
      %th= @sum_fat
      %th= @sum_carb
      %th= @sum_cal
%br/
= render 'form', meal: @meal


