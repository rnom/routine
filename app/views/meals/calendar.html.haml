.main_body
  .calendar
    = month_calendar events: @allmeals do |date, meals|
      = date.day
      - @sum_protein = 0
      - meals.each do |meal|
        - @sum_protein += meal.protein.to_i
      - @sum_fat = 0
      - meals.each do |meal|
        - @sum_fat += meal.fat.to_i
      - @sum_carb = 0
      - meals.each do |meal|
        - @sum_carb += meal.carb.to_i
      - if @sum_protein >= @target_protein && @sum_fat <= @target_fat && @sum_carb <= @target_carb
        .checkmark
          ✔️
        .daily_macro.is-show
          %span P: 
          = @sum_protein
          %br/
          %span F: 
          = @sum_fat
          %br/
          %span C: 
          = @sum_carb
      -elsif date <= Date.today 
        .crossmark
          ✖️
        .daily_macro.is-show
          %span P:
          = @sum_protein
          %br/
          %span F:
          = @sum_fat
          %br/
          %span C:
          = @sum_carb
      
