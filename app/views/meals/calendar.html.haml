.main_body
  .calendar
    = month_calendar events: @allmeals do |date, meals|
      = date.day
      - @sum_protein = 0
      - meals.each do |meal|
        - @sum_protein += meal.protein.to_f
      - @sum_fat = 0
      - meals.each do |meal|
        - @sum_fat += meal.fat.to_f
      - @sum_carb = 0
      - meals.each do |meal|
        - @sum_carb += meal.carb.to_f
      - if @sum_protein >= @target_protein && @sum_fat <= @target_fat && @sum_carb <= @target_carb
        .checkmark
          ✔️
        .daily_macro.is-show
          .PFC_data_box
            %span P: 
            = @sum_protein.round(2)
            %br/
            %span F: 
            = @sum_fat.round(2)
            %br/
            %span C: 
            = @sum_carb.round(2)
      -elsif date <= Date.today 
        .crossmark
          ✖️
        .daily_macro.is-show
          .PFC_data_box
            %span P:
            = @sum_protein.round(2)
            %br/
            %span F:
            = @sum_fat.round(2)
            %br/
            %span C:
            = @sum_carb.round(2)
