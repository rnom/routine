.main_body
  .account_box
    .edit_text
      Edit User
    .edit_account_data
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :nickname
          .edit_account_data_area_form
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :bodyweight, "Bodyweight (kg)"
          .edit_account_data_area_form
            = f.number_field :bodyweight, step: '0.1',autofocus: true, autocomplete: "bodyweight(kg)"
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :height, "Height (cm)"
          .edit_account_data_area_form
            = f.number_field :height, autofocus: true, autocomplete: "height(cm)"
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :age
          .edit_account_data_area_form
            = f.number_field :age, autofocus: true, autocomplete: "age"
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :pal
          .edit_account_data_area_form
            = f.select :pal, [["Seated work with no option of moving around and little or no strenuous leisure activity: 1.5 APL", 1.5], ["Standing work (e.g. housework, shop assistant) : 1.8 PAL", 1.8], ["Strenuous work or highly active leisure : 2.0 PAL", 2.0]]
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :email
          .edit_account_data_area_form
            = f.email_field :email, autofocus: true, autocomplete: "email"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :password
            %i (leave blank if you don't want to change it)
          .edit_account_data_area_form
            = f.password_field :password, autocomplete: "new-password"
            - if @minimum_password_length
              %br/
              %em
                = @minimum_password_length
                characters minimum
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :password_confirmation
          .edit_account_data_area_form
            = f.password_field :password_confirmation, autocomplete: "new-password"
        .edit_account_data_area
          .edit_account_data_area_title
            = f.label :current_password
            %i (we need your current password to confirm your changes)
          .edit_account_data_area_form
            = f.password_field :current_password, autocomplete: "current-password"
        .update_button
          = f.submit "Update"
        .cancel_account_box
          %h3 Cancel my account
          %p
            Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
