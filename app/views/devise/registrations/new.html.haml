%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
  .field
    = f.label :bodyweight
    %br/
    = f.number_field :bodyweight,autofocus: true, autocomplete: "bodyweight(kg)"
  .field
    = f.label :height
    %br/
    = f.number_field :height, autofocus: true, autocomplete: "height(cm)"
  .field
    = f.label :age
    %br/
    = f.number_field :age, autofocus: true, autocomplete: "age"
  .field
    = f.label :pal
    %br/
    = f.number_field :pal, step: '0.1', autofocus: true, autocomplete: "pal(physical activity level)"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
